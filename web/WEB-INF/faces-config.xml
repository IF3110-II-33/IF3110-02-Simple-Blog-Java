<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>model.UserBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>Post</managed-bean-name>
        <managed-bean-class>model.Post</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>NavigationController</managed-bean-name>
        <managed-bean-class>model.NavigationController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ListPost</managed-bean-name>
        <managed-bean-class>model.ListPost</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>model.LoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>user</property-name>
            <property-class>model.UserBean</property-class>
            <value>#{userBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>allUserBean</managed-bean-name>
        <managed-bean-class>model.AllUserBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
</faces-config>
